<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <!-- Avatar o imagen de usuario opcional -->
    <ImageView
        android:id="@+id/userAvatar"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/ic_user"
        android:contentDescription="User Avatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/messageText"
        app:tint="@color/md_theme_secondary" />

    <!-- Mensaje con forma redondeada y sombra -->
    <TextView
        android:id="@+id/messageText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_message_user"
        android:lineSpacingExtra="2dp"
        android:padding="14dp"
        android:text="¿Cuáles son las mejores plantas para cultivar en un invernadero pequeño?"
        android:textColor="@color/md_theme_onPrimaryContainer"
        app:layout_constraintEnd_toStartOf="@+id/userAvatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>