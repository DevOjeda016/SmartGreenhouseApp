<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_surfaceContainerHighest"
    tools:context=".menu_admin">

    <!-- AppBar fuera del ScrollView -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="@color/md_theme_onSecondaryFixedVariant"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Contenedor principal personalizado -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="16dp">

            <!-- Subtítulo (Welcome) -->
            <TextView
                android:id="@+id/txtSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="@string/Welcome"
                android:textColor="@color/md_theme_secondaryFixed"
                android:textSize="16sp"
                android:textStyle="italic"
                app:layout_constraintBottom_toTopOf="@+id/txtTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Título principal (UserUser) -->
            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="236dp"
                android:layout_height="44dp"
                android:text="@string/UserUser"
                android:textAlignment="viewStart"
                android:textColor="@color/md_theme_secondaryFixed"
                android:textSize="34sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtSubtitle" />

            <!-- Contenedor para iconos derecha -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/iconButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:padding="0dp"
                    android:scaleType="fitCenter"
                    app:icon="@drawable/usuario"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconSize="30dp"
                    app:iconTint="@color/md_theme_onPrimaryContainer_mediumContrast" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/iconButton3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:padding="0dp"
                    android:scaleType="fitCenter"
                    app:icon="@drawable/notificacion"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconSize="30dp"
                    app:iconTint="@color/md_theme_onPrimaryContainer_mediumContrast" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.appbar.MaterialToolbar>

    <!-- ScrollView para permitir el desplazamiento -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/topAppBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Contenedor principal dentro del ScrollView -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- LinearLayout horizontal para las tarjetas pequeñas -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Tarjeta pequeña 1 -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/specialCard"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_marginEnd="16dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/md_theme_surfaceVariant"
                    app:cardElevation="2dp"
                    app:shapeAppearance="@style/RoundedCardSmall"
                    app:strokeColor="#20000000"
                    app:strokeWidth="1dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="8dp">

                        <!-- Imagen izquierda -->
                        <ImageView
                            android:id="@+id/cardIcon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/temperatura"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:shapeAppearanceOverlay="@style/RoundedImageSmall"
                            app:srcCompat="@drawable/temperatura" />

                        <!-- Porcentaje derecha -->
                        <TextView
                            android:id="@+id/percentageText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:text="75%"
                            android:textColor="@color/md_theme_onSurface_highContrast"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toEndOf="@id/cardIcon"
                            app:layout_constraintTop_toTopOf="@id/cardIcon" />

                        <!-- Texto inferior -->
                        <TextView
                            android:id="@+id/cardLabel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="@string/header_temperature"
                            android:textColor="@color/md_theme_onSurface_highContrast"
                            android:textSize="12sp"
                            app:layout_constraintEnd_toEndOf="@id/percentageText"
                            app:layout_constraintStart_toStartOf="@id/cardIcon"
                            app:layout_constraintTop_toBottomOf="@id/cardIcon" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Tarjeta pequeña 2 -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/smallCard1"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_marginEnd="16dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/md_theme_surfaceVariant"
                    app:cardElevation="2dp"
                    app:shapeAppearance="@style/RoundedCardSmall"
                    app:strokeColor="#20000000"
                    app:strokeWidth="1dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="8dp">

                        <!-- Imagen izquierda -->
                        <ImageView
                            android:id="@+id/cardIcon1"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/humedad"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:shapeAppearanceOverlay="@style/RoundedImageSmall"
                            app:srcCompat="@drawable/humedad"
                            tools:srcCompat="@drawable/humedad" />

                        <!-- Porcentaje derecha -->
                        <TextView
                            android:id="@+id/percentageText1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:text="50%"
                            android:textColor="@color/md_theme_onSurface_highContrast"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toEndOf="@id/cardIcon1"
                            app:layout_constraintTop_toTopOf="@id/cardIcon1" />

                        <!-- Texto inferior -->
                        <TextView
                            android:id="@+id/cardLabel1"
                            android:layout_width="84dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="4dp"
                            android:text="@string/header_humidity"
                            android:textColor="@color/md_theme_onSurface_highContrast"
                            android:textSize="12sp"
                            app:layout_constraintEnd_toEndOf="@id/percentageText1"
                            app:layout_constraintStart_toStartOf="@id/cardIcon1"
                            app:layout_constraintTop_toBottomOf="@id/cardIcon1" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Tarjeta pequeña 3 -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/smallCard2"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/md_theme_surfaceVariant"
                    app:cardElevation="2dp"
                    app:shapeAppearance="@style/RoundedCardSmall"
                    app:strokeColor="#20000000"
                    app:strokeWidth="1dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="8dp">

                        <!-- Imagen izquierda -->
                        <ImageView
                            android:id="@+id/cardIcon2"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/image"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:shapeAppearanceOverlay="@style/RoundedImageSmall"
                            app:srcCompat="@drawable/contaminacion"
                            tools:srcCompat="@drawable/contaminacion" />

                        <!-- Porcentaje derecha -->
                        <TextView
                            android:id="@+id/percentageText2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:text="25%"
                            android:textColor="@color/md_theme_onSurface_highContrast"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toEndOf="@id/cardIcon2"
                            app:layout_constraintTop_toTopOf="@id/cardIcon2" />

                        <!-- Texto inferior -->
                        <TextView
                            android:id="@+id/cardLabel2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="@string/header_pollution"
                            android:textColor="@color/md_theme_onSurface_highContrast"
                            android:textSize="12sp"
                            app:layout_constraintEnd_toEndOf="@id/percentageText2"
                            app:layout_constraintStart_toStartOf="@id/cardIcon2"
                            app:layout_constraintTop_toBottomOf="@id/cardIcon2" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- LinearLayout vertical para las tarjetas grandes -->

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="10dp"
                android:text="@string/last_modified"
                android:textAlignment="textEnd"
                android:textColor="@color/md_theme_onSurfaceVariant_mediumContrast" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Tarjeta grande 1 -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/materialCardView5"
                    android:layout_width="match_parent"
                    android:layout_height="92dp"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="@color/md_theme_surfaceVariant"
                    app:cardElevation="4dp"
                    app:shapeAppearance="@style/RoundedCard"
                    app:strokeColor="#20000000"
                    app:strokeWidth="1dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="16dp">

                        <!-- Textos -->
                        <TextView
                            android:id="@+id/cardTitle1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/planting_card_title"
                            android:textColor="@color/md_theme_onSurface_highContrast"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/cardSubtitle1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:maxLines="2"
                            android:text="@string/planting_card_subtitle"
                            android:textColor="@color/md_theme_onSurfaceVariant_mediumContrast"
                            android:textSize="14sp"
                            app:layout_constraintEnd_toEndOf="@id/cardTitle1"
                            app:layout_constraintStart_toStartOf="@id/cardTitle1"
                            app:layout_constraintTop_toBottomOf="@id/cardTitle1" />

                        <!-- Imagen -->
                        <ImageView
                            android:id="@+id/logoView1"
                            android:layout_width="64dp"
                            android:layout_height="69dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/image"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/ficha_plantacion" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Tarjeta grande 2 -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/materialCardView7"
                    android:layout_width="match_parent"
                    android:layout_height="92dp"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="@color/md_theme_surfaceVariant"
                    app:cardElevation="4dp"
                    app:shapeAppearance="@style/RoundedCard"
                    app:strokeColor="#20000000"
                    app:strokeWidth="1dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="16dp">

                        <!-- Textos -->
                        <TextView
                            android:id="@+id/cardTitle2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/cultival_title"
                            android:textColor="@color/md_theme_onSurface_highContrast"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/cardSubtitle2"
                            android:layout_width="79dp"
                            android:layout_height="37dp"
                            android:maxLines="2"
                            android:text="@string/cultival_subtitle"
                            android:textColor="@color/md_theme_onSurfaceVariant_mediumContrast"
                            android:textSize="14sp"
                            app:layout_constraintEnd_toEndOf="@id/cardTitle2"
                            app:layout_constraintStart_toStartOf="@id/cardTitle2"
                            app:layout_constraintTop_toBottomOf="@id/cardTitle2" />

                        <!-- Imagen -->
                        <ImageView
                            android:id="@+id/logoView2"
                            android:layout_width="64dp"
                            android:layout_height="69dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/image"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/ia" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Tarjeta grande 3 -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/materialCardView"
                    android:layout_width="match_parent"
                    android:layout_height="92dp"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="@color/md_theme_surfaceVariant"
                    app:cardElevation="4dp"
                    app:shapeAppearance="@style/RoundedCard"
                    app:strokeColor="#20000000"
                    app:strokeWidth="1dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="16dp">

                        <!-- Textos -->
                        <TextView
                            android:id="@+id/cardTitle3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/monitor_sensors_title"
                            android:textColor="@color/md_theme_onSurface_highContrast"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/cardSubtitle3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:maxLines="2"
                            android:text="@string/monitor_sensors_subtitle"
                            android:textColor="@color/md_theme_onSurfaceVariant_mediumContrast"
                            android:textSize="14sp"
                            app:layout_constraintEnd_toEndOf="@id/cardTitle3"
                            app:layout_constraintStart_toStartOf="@id/cardTitle3"
                            app:layout_constraintTop_toBottomOf="@id/cardTitle3" />

                        <!-- Imagen -->
                        <ImageView
                            android:id="@+id/logoView3"
                            android:layout_width="64dp"
                            android:layout_height="69dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/image"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/monitoreo_sensores" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Tarjeta grande 4 -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/materialCardView6"
                    android:layout_width="match_parent"
                    android:layout_height="92dp"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="@color/md_theme_surfaceVariant"
                    app:cardElevation="4dp"
                    app:shapeAppearance="@style/RoundedCard"
                    app:strokeColor="#20000000"
                    app:strokeWidth="1dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="16dp">

                        <!-- Textos -->
                        <TextView
                            android:id="@+id/cardTitle4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/graph_data_title"
                            android:textColor="@color/md_theme_onSurface_highContrast"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/cardSubtitle4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:maxLines="2"
                            android:text="@string/graph_data_subtitle"
                            android:textColor="@color/md_theme_onSurfaceVariant_mediumContrast"
                            android:textSize="14sp"
                            app:layout_constraintEnd_toEndOf="@id/cardTitle4"
                            app:layout_constraintStart_toStartOf="@id/cardTitle4"
                            app:layout_constraintTop_toBottomOf="@id/cardTitle4" />

                        <!-- Imagen -->
                        <ImageView
                            android:id="@+id/logoView4"
                            android:layout_width="64dp"
                            android:layout_height="69dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/image"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/grafica_barras" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Tarjeta grande 5 -->

                <!-- Tarjeta grande 6 -->

                <!-- Tarjeta grande 7 -->

                <!-- Texto de última modificación -->
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>